generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  Decks    Decks[]

  @@map("users")
}

model Decks {
  id            Int             @id @default(autoincrement())
  name          String
  userId        Int
  user          Users           @relation(fields: [userId], references: [id])
  DeckQuestions DeckQuestions[]

  @@unique([name, userId])
  @@map("decks")
}

model DeckQuestions {
  id       Int    @id @default(autoincrement())
  question String
  answer   String

  deckId Int
  deck   Decks @relation(fields: [deckId], references: [id])

  @@map("deckQuestions")
}
